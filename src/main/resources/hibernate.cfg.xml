<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/studentapp?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password">1234</property>
    <mapping resource="lk/edu/javainstitute/studentclient/db/Stdent.hbm.xml"/>
    <mapping resource="lk/edu/javainstitute/studentclient/db/Question.hbm.xml"/>
    <mapping resource="lk/edu/javainstitute/studentclient/db/Events.hbm.xml"/>
    <mapping resource="lk/edu/javainstitute/studentclient/db/Subject.hbm.xml"/>
    <mapping resource="lk/edu/javainstitute/studentclient/db/Marks.hbm.xml"/>
    <mapping resource="lk/edu/javainstitute/studentclient/db/Contact.hbm.xml"/>
    <mapping resource="lk/edu/javainstitute/studentclient/db/Year.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
